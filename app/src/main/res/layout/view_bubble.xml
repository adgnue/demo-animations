<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_expenses_bubble_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.Guideline
        android:id="@+id/view_expenses_guideline_left_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"/>

    <android.support.constraint.Guideline
        android:id="@+id/view_expenses_guideline_top_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"/>

    <android.support.constraint.Guideline
        android:id="@+id/view_expenses_guideline_right_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"/>

    <android.support.constraint.Guideline
        android:id="@+id/view_expenses_guideline_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <View
        android:id="@+id/view_expenses_bubble_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view_expenses_guideline_left_background"
        app:layout_constraintRight_toRightOf="@id/view_expenses_guideline_right_background"
        app:layout_constraintTop_toTopOf="@id/view_expenses_guideline_top_background"/>

</android.support.constraint.ConstraintLayout>